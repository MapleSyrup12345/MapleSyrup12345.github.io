main{
	background-color:#ABCDEF;
	width:100%;
	padding:10px;
	display:grid;
	grid-template-rows:10fr;
	grid-gap:8px;
	height:1000px;
}

body{
	display:flex;
	justify-content:center;
	align-items:center;
	
}




#menu{
	display:grid;
	grid-template-rows:1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr
	
}

section{
	border:5px solid #ff00ff;
	background-color:#FEDCBA;
	position:absolute;
	top:20px;
	left:175px;
	width:550px;
	height:965px;
	padding:10px;
}

input{
	height:60px;
	width:140px;
}

#menu > input{
	background-color:d5d5d5;
	color:purple;
	font-weight:bold;
	font-size:16px;
	border-radius:10px;
	
}

#menu > input:hover{
	background-color:#ABCDEF;
	color:yellow;
}

#theme > input{
	color:purple;
	font-weight:bold;
	font-size:16px;
}

#theme > input:hover{
	background-color:#000000;
	color:#AF8500;
	
}

#theme{
	position:absolute;
	left:770px;
	top: 150px;
	padding:10px;
	display:grid;
	grid-template-rows:1fr 1fr 1fr;
	grid-gap:250px;
}